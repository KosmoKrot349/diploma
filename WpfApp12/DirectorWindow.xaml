                </DataGrid.Columns>
            </DataGrid>
            <Button Name="ObslWorkDeleteButton" FontSize="16" Content="Удалить" IsEnabled="False" ToolTip="Нажмите для удаления выбранной работы" Grid.Column="0"  Grid.Row="1" Click="ObslWorkDeleteButton_Click"    />
            <Button Name="ObslWorkChangeButton" FontSize="16" Content="Добавить/изменить" ToolTip="Нажмите для сохранений изменений в таблице" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Click="ObslWorkChangeButton_Click" />
