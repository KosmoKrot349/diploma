                <RowDefinition Height="30pt"/>
            </Grid.RowDefinitions>
            <DataGrid Name="ObslWorkDataGrid" ToolTip="Таблица в которой отображаются добавленные Вами работы обслуживания. Для сохранения или изменения добавьте новую работу в пустую строку или измените существующий и нажмите 'Добавить/изменить'" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" ItemsSource="{Binding}" AutoGenerateColumns="False" SelectedCellsChanged="listenerDataGrid_SelectedCellsChanged">
