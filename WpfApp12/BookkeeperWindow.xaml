            <Label Content="Размер расхода" FontSize="16"  HorizontalContentAlignment="Right"  VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="3" />
            <Label Content="Дата выдачи" FontSize="16"  HorizontalContentAlignment="Right"  VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="4" />
            <Label Content="Уточнение" FontSize="16"  HorizontalContentAlignment="Right"  VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="5" />

            <ComboBox Name="CostsChangeType" Grid.Column="1" Grid.Row="1" />
            <ComboBox Name="CostsChangePersonName" Grid.Column="1" Grid.Row="2" />
            <TextBox Name="CostsChangeSum"  Grid.Column="1" Grid.Row="3" PreviewTextInput="TextBox_PreviewTextInput"/>
            <DatePicker Name="CostsChangeDate"  Grid.Column="1" Grid.Row="4"/>
            <TextBox Name="CostsChangeComment"  Grid.Column="1" Grid.Row="5" />

            <Button Name="RashodyChangeButton" FontSize="16" Content="Сохранить"  ToolTip="Нажмите для изменения расхода" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="8" Click="RashodyChangeButton_Click" />

        </Grid>


        <!--грид добавления расхода-->
        <Grid Name="CostsAddGrid" Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30pt"/>
                <RowDefinition Height="30pt"/>
                <RowDefinition Height="30pt"/>
                <RowDefinition Height="30pt"/>
                <RowDefinition Height="30pt"/>
                <RowDefinition Height="30pt" />
                <RowDefinition />
                <RowDefinition Height="30pt"/>
            </Grid.RowDefinitions>
            <Label Content="Добавление расхода" FontSize="20" HorizontalContentAlignment="Center"  VerticalContentAlignment="Center" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"/>

            <Label Content="Тип расхода" FontSize="16"  HorizontalContentAlignment="Right"  VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="1" />
            <Label Content="Кому выданны деньги"  FontSize="16"  HorizontalContentAlignment="Right"  VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="2" />
            <Label Content="Размер расхода" FontSize="16"  HorizontalContentAlignment="Right"  VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="3" />
            <Label Content="Дата выдачи" FontSize="16"  HorizontalContentAlignment="Right"  VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="4" />
            <Label Content="Уточнение" FontSize="16"  HorizontalContentAlignment="Right"  VerticalContentAlignment="Center" Grid.Column="0" Grid.Row="5" />

            <ComboBox Name="CostsAddType" Grid.Column="1" Grid.Row="1" />
            <ComboBox Name="CostsAddPersonName" Grid.Column="1" Grid.Row="2" />
            <TextBox Name="CostsAddSum"  Grid.Column="1" Grid.Row="3" PreviewTextInput="TextBox_PreviewTextInput"/>
            <DatePicker Name="CostsAddDate"  Grid.Column="1" Grid.Row="4"/>
            <TextBox Name="CostsAddDesc"  Grid.Column="1" Grid.Row="5" />

            <Button Name="RashodyAddButton" FontSize="16" Content="Добавить"  ToolTip="Нажмите для добавления нового расхода" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="8" Click="RashodyAddButton_Click"     />

        </Grid>
        
