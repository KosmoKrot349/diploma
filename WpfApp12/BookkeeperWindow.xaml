                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>
                        <Label Content="Месяц" BorderBrush="Black" BorderThickness="2" Grid.Column="0" Grid.Row="0" />
                        <Label Content="Оплата за месяц" BorderBrush="Black" BorderThickness="2" Grid.Column="0" Grid.Row="1" />
                        <Label BorderBrush="Black" Content="Уже оплачено" BorderThickness="2" Grid.Column="0" Grid.Row="2" />
                        <Label BorderBrush="Black" Content="Скидки при оплате на перед" BorderThickness="2" Grid.Column="0" Grid.Row="3" />
                        <Label BorderBrush="Black" BorderThickness="2" Content="Пеня" Grid.Column="0" Grid.Row="4" />
                        <Label BorderBrush="Black" BorderThickness="2" Content="Необходимо заплатить" Grid.Column="0" Grid.Row="5" />
                        <Label BorderBrush="Black" BorderThickness="2" Content="Внесёно" Grid.Column="0" Grid.Row="6" />
                    </Grid>

                </Grid>
            </ScrollViewer>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" FontSize="16" Content="Оплата" Name="AddPAyDolg" Click="AddPAyDolg_Click"  />
                <Button Grid.Column="1" FontSize="16" Content="Удалить запись" Name="deleteDolg" Click="deleteDolg_Click" />
               
            </Grid>
        </Grid>



        <!--грид начислений-->
        <Grid Name="AccrualsGrid" Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions  >
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions  >
                <RowDefinition Height="3*"/>
                <RowDefinition Height="30pt"/>
            </Grid.RowDefinitions>

            <!--грид с таблицей начилений-->
                <Grid Name="AccrualsTableGrid" Grid.Column="0" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30pt"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                
                <Grid>
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="NachMonthPrev" Content="Предыдущий" FontSize="16" Grid.Column="0" Grid.Row="0" Click="NachMonthPrev_Click" />
