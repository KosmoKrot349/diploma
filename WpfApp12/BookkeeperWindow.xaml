                    <Button Name="NachMonthNext" Content="Следующий"  FontSize="16" Grid.Column="2" Grid.Row="0" Click="NachMonthNext_Click" />
                </Grid>
                
                    <DataGrid Name="AccrualsDataGrid" IsReadOnly="true" Grid.Column="0" Grid.Row="1" ItemsSource="{Binding}" AutoGenerateColumns="False" SelectedCellsChanged="NachDataGrid_SelectedCellsChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Visibility="Collapsed" Header="ID" Binding="{Binding nachid}" Width="10*" />
                            <DataGridTextColumn Header="ФИО" Binding="{Binding fio}" Width="10*" />
                            <DataGridTextColumn Header="ЗП преподавателя" Binding="{Binding prepzp}" Width="10*" />
                        <DataGridTextColumn Header="ЗП штатная" Binding="{Binding shtatzp}" Width="10*" />
                        <DataGridTextColumn Header="Военный сбор" Binding="{Binding vs}" Width="10*" />
                            <DataGridTextColumn Header="ФСС" Binding="{Binding fss}" Width="10*" />
                            <DataGridTextColumn Header="НДФЛ" Binding="{Binding ndfl}" Width="10*" />
                            <DataGridTextColumn Header="Всего ЗП" Binding="{Binding allzp}" Width="10*" />
                            <DataGridTextColumn Header="Выплачено ЗП" Binding="{Binding viplacheno}" Width="10*" />
                            <DataGridTextColumn Header="К оплате ЗП" Binding="{Binding topay}" Width="10*" />
                        </DataGrid.Columns>
                    </DataGrid>
                
            </Grid>

            <Grid Grid.Column="1" Grid.Row="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="30pt"/>
                    <RowDefinition Height="6*"/>
                </Grid.RowDefinitions>
                <!--грид с таблицей сотрудников-->
                <Label Content="Выберите сотрудников" FontSize="14" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="0" />
                <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Grid.Row="1" >
                    <Grid Name="AccrualsStaffGrid" >

                    </Grid>
                </ScrollViewer>
            </Grid>

            <!--конпки-->
            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Name="NachAddBut" FontSize="16" Content="Начислить" Grid.Column="0" Click="NachAddBut_Click" />
                <Button Name="ViplataBut" FontSize="16" Content="Выплатить" Grid.Column="1" Click="ViplataBut_Click" />
            </Grid>

            <Button Name="NuchSelectAllSotrBut" FontSize="16" Content="Выбрать всех" Grid.Column="1" Grid.Row="1" Click="NuchSelectAllSotrBut_Click" />
     
        </Grid>

        <!--грид налогов-->
        <Grid Name="TaxesGrid" Grid.Row="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="30pt"/>
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30pt"/>
                        <RowDefinition Height="30pt"/>
                        <RowDefinition Height="30pt"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Grid.Row="0"  Content="Отчисления в фонд социального страхования"/>
                    <Label Grid.Column="0" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Grid.Row="1"  Content="Военный сбор"/>
                    <Label Grid.Column="0" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Grid.Row="2"  Content="Налог с дохода физических лиц"/>

                    <TextBox Name="FondSotsStrah" Grid.Column="1" Grid.Row="0" PreviewTextInput="TextBox_PreviewTextInput"/>
                    <TextBox Name="VoenSbor" Grid.Column="1" Grid.Row="1" PreviewTextInput="TextBox_PreviewTextInput"/>
                    <TextBox Name="NDFL" Grid.Column="1" Grid.Row="2" PreviewTextInput="TextBox_PreviewTextInput"/>
                    
                </Grid>
            </ScrollViewer>
            <Canvas Grid.Row="1" Background="LightGray" />
            <Button Name="NalogiSave" Content="Сохранить" FontSize="16" ToolTip="Нажмите для сохранения процентов налогов" Grid.Row="2" Click="NalogiSave_Click" />

        </Grid>

        <!--грид изменения расхода-->
        <Grid Name="CostsChangeGrid" Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30pt"/>
                <RowDefinition Height="30pt"/>
                <RowDefinition Height="30pt"/>
                <RowDefinition Height="30pt"/>
                <RowDefinition Height="30pt"/>
                <RowDefinition Height="30pt" />
                <RowDefinition />
                <RowDefinition Height="30pt"/>
            </Grid.RowDefinitions>
            <Label Content="Изменение расхода"  HorizontalContentAlignment="Center"  VerticalContentAlignment="Center" FontSize="20" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"/>

            <Label Content="Тип расхода" FontSize="16"  HorizontalContentAlignment="Right"  VerticalContentAlignment="Center"  Grid.Column="0" Grid.Row="1" />
