                <RowDefinition/>
                <RowDefinition Height="30pt"/>
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" Grid.ColumnSpan="4" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ScrollViewer Grid.Column="0"  HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                    <Grid Name="FilterGridEmployees" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" Content="Не выплачена ЗП" Name="FirstMethodFilter" Checked="SelectedFilter_Checked" />
                        <CheckBox Grid.Column="1" Content="Не начислена ЗП" Name="SecondMethodFilter" Checked="SelectedFilter_Checked"/>
                        <DatePicker Grid.Column="2" Name="DatePickeEmployees" />
                    </Grid>
                </ScrollViewer>
                <Button Content="Применить"  FontSize="16" Name="FilterEmployeesButton" Grid.Column="1" Click="FilterGroupsButton_Click"/>
            </Grid>

            <DataGrid ToolTip="Таблица в которой отображаются добавленные Вами сотрудники. Для работы с сотрудником выберете его кликнув по нему, после чего выберете одно из действий предложенных ниже" Name="EmployeesDataGrid" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1" ItemsSource="{Binding}"  AutoGenerateColumns="False" SelectedCellsChanged="DataGrid_SelectedCellsChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Visibility="Collapsed" Header="ID" Binding="{Binding sotrid}" Width="5*" />
                    <DataGridTextColumn Header="ФИО" Binding="{Binding fio}" Width="5*" />
                    <DataGridTextColumn Header="Телефон" Binding="{Binding phone}" Width="5*" />
                    <DataGridTextColumn Header="Номер трудовой" Binding="{Binding num_trud}" Width="5*" />
                    <DataGridTextColumn Header="Комментарий" Binding="{Binding comment}" Width="5*" />
                </DataGrid.Columns>
            </DataGrid>
            <Button Name="EmployeeDelet"  FontSize="16" IsEnabled="False" Content="Удалить" ToolTip="Нажмите для уадления выбранного сотрудника" Grid.Column="0"  Grid.Row="2" Click="Button_Click"  />
            <Button Name="EmployeeAddChange"  FontSize="16" Content="Сохранить/Изменить" ToolTip="Нажмите для сохранения изменений" Grid.Column="1"  Grid.Row="2" Click="Button_Click"   />
            <Button Name="GoToEmployeeToTeacher"  FontSize="16" IsEnabled="False" Content="Сделать преподавателем" ToolTip="Нажмите для того что бы сделать выбранного сотркдника преподавателем" Grid.Column="2"  Grid.Row="2" Click="Button_Click"   />
            <Button Name="GoToEmployeeToStuff"  FontSize="16" IsEnabled="False" Content="Сделать штатным" ToolTip="Нажмите для того что бы сделать выбранного сотркдника штатным" Grid.Column="3"  Grid.Row="2" Click="Button_Click"  />
        </Grid>

       
        <!--грид окна приветсвия-->
        <Grid Name="helloGrdi" Grid.Row="1" >
            <TextBlock  TextWrapping="Wrap" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"  Name="hello_label" />
        </Grid>
        
        <!--грид расписания звонков+-->
        <Grid Name="TimeScheduleGrid" Grid.Row="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30pt"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DataGrid ToolTip="Таблица в которой отображаются добавленное Вами время расписания занятий. Добавьте новое время занятий заполнив пустую строку либо измените существующее, после чего нажмите 'Добавить/Изменить'" Name="TimeScheduleDataGrid" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" ItemsSource="{Binding}" AutoGenerateColumns="False" SelectedCellsChanged="DataGrid_SelectedCellsChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding id}" Visibility="Collapsed" Width="4*" />
                    <DataGridTextColumn Header="Номер занятия" Binding="{Binding lesson_number}" Width="4*" />
                    <DataGridTextColumn Header="Время начала" Binding="{Binding time_start}" Width="4*" />
                    <DataGridTextColumn Header="Время окончания" Binding="{Binding time_end}" Width="4*" />

                </DataGrid.Columns>
            </DataGrid>
            <Button Name="TimeScheduleDelete"  FontSize="16" IsEnabled="False" Content="Удалить" ToolTip="Нажмите для удаления выбранного времени" Grid.Column="0"  Grid.Row="1" Click="Button_Click"  />
            <Button Name="TimeScheduleAddChange"  FontSize="16" Content="Добавить/Изменить" ToolTip="Нажмите для сохранения изменений в таблице" Grid.Column="1" Grid.ColumnSpan="2"  Grid.Row="1" Click="Button_Click"  />
        </Grid>
    </Grid>
</Window>
