<Window x:Class="WpfApp12.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:WpfApp12"
        mc:Ignorable="d"
        Title="Менеджер"  Height="300" Width="300">
    <!--самый главный грид-->
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="15pt"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--меню директора+-->
        <Menu Name="ManagerMenu"  Grid.Row="0">
            <MenuItem Name="MenuRoles" Header="Права" ToolTip="Нажмите для выбора доступной Вам роли" Click="Menu_Click">
                <MenuItem Name="GoToAdminMenu" Header="Админ" Click="Menu_Click" ToolTip="Нажмите для перехода к роли администратора"/>
                <MenuItem  Name="GoToBookkeeperMenu" Header="Бухгалтер" Click="Menu_Click" ToolTip="Нажмите для перехода к роли бухгалтера"/>
                <MenuItem  Name="GoToManagerMenu" Header="Директор" Click="Menu_Click" ToolTip="Роль директора уже выбрана"/>
            </MenuItem>
            <MenuItem Name="ScheduleMenu" Header="Расписание" ToolTip="Нажмите для редактрования расписания" Click="Menu_Click" >
                <MenuItem Name="TimeScheduleMenuTimeScheduleMenu" Header="Расписание времени занятий" Click="Menu_Click" ToolTip="Нажмите для редактирования расписания времени занятий" >
                </MenuItem>
                <MenuItem Name="StaffScheduleMenu" Header="Штатное расписание" ToolTip="Нажмите для работы со штатным расписанием" Click="Menu_Click"/>
                <MenuItem Name="LessosnScheduleMenu" Header="Расписание занятй"  ToolTip="Нажмите для редактирования расписания занятий" >
                    <MenuItem Name="GroopsScheduleMenu" Header="По группам"  ToolTip="Нажмите для редактирования расписания" Click="Menu_Click"/>
                    <MenuItem Name="TeachersScheduleMenu" Header="По преподавателям"  ToolTip="Нажмите для редактирования расписания" Click="Menu_Click"/>
                    <MenuItem Name="CabinetsScheduleMenu" Header="По кабинетам"  ToolTip="Нажмите для редактирования расписания" Click="Menu_Click"/>
                </MenuItem>
                <MenuItem Name="CabinetMenu" Header="Кабинеты" ToolTip="Нажмите для работы с кабинетами" Click="Menu_Click" />
            </MenuItem>
            <MenuItem Name="EmployeesMenu" Header="Персонал" ToolTip="Нажмите для редактирования информации о работниках" Click="Menu_Click" >

                <MenuItem Header="Сотрудники">
                    <MenuItem Name="AllEmployeesMenu" Header="Все сотрудники" ToolTip="Нажмите для перехода к работе с общей таблицей сотрудников" Click="Menu_Click" />
                    <MenuItem Name="TeachersMenu" Header="Преподаватели" ToolTip="Нажмите для перехода к работе с таблицей преподавателей" Click="Menu_Click" />
                    <MenuItem Name="StaffMenu" Header="Штатные сотрудники" ToolTip="Нажмите для перехода к работе с таблицей штатных сотрудников" Click="Menu_Click" />
                </MenuItem>

                <MenuItem Header="Работы">
                    <MenuItem Name="CategoriesMenu" Header="Категории" ToolTip="Нажмите для работы с категориями" Click="Menu_Click" />
                    <MenuItem Name="WorkCoeffMenu" Header="Коэффициент выслуги лет" ToolTip="Нажмите для работы с коэффициентом" Click="Menu_Click"  />
                    <MenuItem Name="PositionsMenu" Header="Должности" ToolTip="Нажмите для работы с должностями" Click="Menu_Click" />
                    <MenuItem Name="ServiceWorkMenu" Header="Работы обслуживания" ToolTip="Нажмите для работы со сдельными работами" Click="Menu_Click" />
                </MenuItem>
                
            </MenuItem>
            <MenuItem Name="LearningMenu" Header="Обучение" ToolTip="Нажмите для редактирования информации об обучении" Click="Menu_Click">
                <MenuItem Name="GroupsMenu" Header="Группы" ToolTip="Нажмите для работы с группами" Click="Menu_Click" />
                <MenuItem Name="CoursesMenu" Header="Курсы" ToolTip="Нажмите для работы с курсами" Click="Menu_Click"/>
                <MenuItem Name="SubjectMeny" Header="Предметы" ToolTip="Нажмите для работы с предметами" Click="Menu_Click"/>
                <MenuItem Name="ListenerMenu" Header="Слушатели" ToolTip="Нажмите для работы со слушателями" Click="Menu_Click"/>
            </MenuItem>
            <MenuItem  Name="DiscountMenu" Header="Финансы" >
                <MenuItem ToolTip="Скидки при оплате за обучение" Name="DiscountsMenu" Header="Скидки" Click="Menu_Click"/>
                <MenuItem ToolTip="Пеня при оплате за обучение" Name="FineMenu" Header="Пеня" Click="Menu_Click" />
                <MenuItem ToolTip="Типы доходов предприятия" Name="TypeProfitMenu" Header="Типы доходов" Click="Menu_Click" />
                <MenuItem ToolTip="Типы расходов предприятия" Name="TypeCostsMenu" Header="Типы расходов" Click="Menu_Click" />
            </MenuItem>

            <MenuItem Header="Отчёты" Name="ReportsMenu" Click="Menu_Click">
                <MenuItem  Header="Касса" Name="CashboxReportMenu" Click="Menu_Click" />
                <MenuItem  Header="Списки выплат"  Name="PaymentListReportMenu" Click="Menu_Click" />
                <MenuItem  Header="Статистика доходов/расходов" Name="StatisticReportMenu" Click="Menu_Click"   />
            </MenuItem>

            <MenuItem ToolTip="Нажмите что бы выйти из учётной записи" Name="Leave" Header="Выйти" Click="Menu_Click" />
        </Menu>

        <!--грид списки выплат+ -->
        <Grid Name="PaymentListReportGrid"  Grid.Row="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Name="PaymentListReportLabel" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                <Grid Name="PaymentListReportOutputGrid">

                </Grid>
            </ScrollViewer>
        </Grid>

        <!--грид статистика+ -->
        <Grid Name="StatisticGrid"  Grid.Row="1" Visibility="Collapsed">
            <oxy:PlotView Name="StatisticPlot"/>
        </Grid>



        <!--грид касса+ -->
        <Grid Name="CashboxReportGrid"  Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
<!--фильтр доходов-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30pt"/>
                    <RowDefinition Height="30pt"/>
                    <RowDefinition/>
                    <RowDefinition Height="30pt"/>
                    <RowDefinition/>
                    <RowDefinition Height="30pt"/>
                </Grid.RowDefinitions>
                <Label Content="Фильтр для доходов" Grid.Row="0" />
                <Label Content="Кто внёс" Grid.Row="1" />
                <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                    <Grid Name="PersonProfitFilterGrid">
                    </Grid>
                </ScrollViewer>
                <Label Content="Тип дохода" Grid.Row="3" />
                <ScrollViewer Grid.Row="4" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                    <Grid Name="TypeProfitFilterGrid">
                    </Grid>
                </ScrollViewer>
                <Button Content="Применить" Grid.Row="5" Name="ApplyProfitFilterForCashboxReport" Click="Button_Click" />
            </Grid>


            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30pt"/>
                    <RowDefinition Height="30pt"/>
                    <RowDefinition/>
                    <RowDefinition Height="30pt"/>
                    <RowDefinition/>
                    <RowDefinition Height="30pt"/>
                </Grid.RowDefinitions>
                <Label Content="Фильтр для расходов" Grid.Row="0" />
                <Label Content="Кто получил" Grid.Row="1" />
                <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                    <Grid Name="PersonCostsFilterGrid">
                    </Grid>
                </ScrollViewer>
                <Label Content="Тип расхода" Grid.Row="3" />
                <ScrollViewer Grid.Row="4" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                    <Grid Name="TypeCostsFilterGrid">
                    </Grid>
                </ScrollViewer>
                <Button Content="Применить"  Name="ApplyCostsFilterForCashboxReport" Click="Button_Click" Grid.Row="5" />
            </Grid>


            <Grid Grid.Column="1"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                </Grid.RowDefinitions>

                <Label Name="CashboxTitleLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"   BorderThickness="2" BorderBrush="Black" FontSize="20" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" />

                <Label Content="Доходы" Grid.Row="1" Grid.Column="0" BorderThickness="2" BorderBrush="Black" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                <Label Content="Расходы" Grid.Row="1" Grid.Column="1"  BorderThickness="2" BorderBrush="Black" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  />


                <ScrollViewer Grid.Row="2" Grid.Column="0" >
                    <Grid  Name="CashboxProfitGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ScrollViewer>
                <ScrollViewer Grid.Row="2" Grid.Column="1">
                    <Grid  Name="CashboxCostsGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ScrollViewer>

                <Label Content="Итого:" Name="CashboxTotalProfit" Grid.Row="3" Grid.Column="0"  BorderThickness="2" BorderBrush="Black" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  />
                <Label Content="Итого:" Name="CashboxTotalCosts" Grid.Row="3" Grid.Column="1"  BorderThickness="2" BorderBrush="Black" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  />

                <Label Name="CashboxFinalProfit" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"  BorderThickness="2" BorderBrush="Black" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  />

            </Grid>

        </Grid>

        <!--грид штатного расписания+-->
        <Grid Name="StaffScheduleGrid" Grid.Row="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="30pt"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="30pt"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Предыдущий месяц" Name="PrevMonthStaffSchedule" Click="Button_Click"  FontSize="14" />
                <Label Name="StaffScheduleDateLabel" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Grid.Row="0" Grid.Column="1" />
                <Button Grid.Column="2" Name="NextMonthStaffSchedule" Content="Следующий месяц" Click="Button_Click" FontSize="14" />
            </Grid>
           
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                    <Grid Name="MonthGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>
                    </Grid>
                </ScrollViewer>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="6*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Присутствующие сторудники" Grid.Row="0" FontSize="12" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" />
                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                        <Grid Name="StaffScheduleEmployeesGrid">
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Grid>
            <Grid Grid.Row="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Сохранить" FontSize="12" Grid.Column="0" Name="SaveStaffSchedule" Click="Button_Click" />
                <Button Content="Выбрать всех" FontSize="12" Grid.Column="1" Name="SelectAllPersonalInStaffSchedule" Click="Button_Click" />
            </Grid>
        </Grid>

        <!--грид работы обслуживания+ -->
        <Grid Name="ServiceWorksGrid" Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30pt"/>
            </Grid.RowDefinitions>
            <DataGrid Name="ServiceWorkDataGrid" ToolTip="Таблица в которой отображаются добавленные Вами работы обслуживания. Для сохранения или изменения добавьте новую работу в пустую строку или измените существующий и нажмите 'Добавить/изменить'" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" ItemsSource="{Binding}" AutoGenerateColumns="False" SelectedCellsChanged="DataGrid_SelectedCellsChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Visibility="Collapsed" Header="ID" Binding="{Binding rabotyid}" Width="5*" />
                    <DataGridTextColumn Header="Название" Binding="{Binding title}" Width="5*" />
                    <DataGridTextColumn Header="Оплата" Binding="{Binding pay}" Width="5*" />
                    <DataGridTextColumn Header="Единицы измерения" Binding="{Binding ed_izm}" Width="5*" />
                    <DataGridTextColumn Header="Комментарий" Binding="{Binding comment}" Width="5*" />
                </DataGrid.Columns>
            </DataGrid>
            <Button Name="DeleteServiceWork" FontSize="16" Content="Удалить" IsEnabled="False" ToolTip="Нажмите для удаления выбранной работы" Grid.Column="0"  Grid.Row="1" Click="Button_Click"    />
            <Button Name="AddChangeServiceWork" FontSize="16" Content="Добавить/изменить" ToolTip="Нажмите для сохранений изменений в таблице" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Click="Button_Click" />
        </Grid>

        <!--грид изменения должностей+ -->
        <Grid Name="PositionsChangeGrid" Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30pt"/>
                <RowDefinition  Height="30pt"/>
                <RowDefinition  Height="30pt"/>
                <RowDefinition  />
                <RowDefinition  Height="30pt"/>
                <RowDefinition  Height="30pt"/>
                <RowDefinition/>
                <RowDefinition  Height="30pt"/>
            </Grid.RowDefinitions>
            <Label Content="Изменение должности" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="20" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" />

            <Label Content="Название" Grid.Row="1" Grid.Column="0" VerticalContentAlignment="Top" HorizontalContentAlignment="Right" FontSize="16" />
            <Label Content="Рабочие дни по месяцам" Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" VerticalContentAlignment="Top" HorizontalContentAlignment="Right" FontSize="16" />
            <Label Content="Оплата" Grid.Row="4" Grid.Column="0" VerticalContentAlignment="Top" HorizontalContentAlignment="Right" FontSize="16" />
            <Label Content="Комментарий" Grid.Row="5" Grid.Column="0" VerticalContentAlignment="Top" HorizontalContentAlignment="Right" FontSize="16" />

            <TextBox Grid.Row="1" Grid.Column="1" Name="PositionChangeTitle"/>
            <ScrollViewer Grid.Row="2" Grid.RowSpan="2" Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Content="Январь" Grid.Row="0" Grid.Column="0" />
                    <Label Content="Февраль" Grid.Row="1" Grid.Column="0"/>
                    <Label Content="Март" Grid.Row="2" Grid.Column="0"/>
                    <Label Content="Апрель" Grid.Row="3" Grid.Column="0"/>
                    <Label Content="Май" Grid.Row="4" Grid.Column="0"/>
                    <Label Content="Июнь" Grid.Row="5" Grid.Column="0"/>
                    <Label Content="Июль" Grid.Row="6" Grid.Column="0"/>
                    <Label Content="Август" Grid.Row="7" Grid.Column="0"/>
                    <Label Content="Сентябрь" Grid.Row="8" Grid.Column="0"/>
                    <Label Content="Октябрь" Grid.Row="9" Grid.Column="0"/>
                    <Label Content="Ноябрь" Grid.Row="10" Grid.Column="0"/>
                    <Label Content="Декабрь" Grid.Row="11" Grid.Column="0"/>

                    <TextBox Grid.Row="0" Grid.Column="1" Name="ChangeWorksDaysIn1Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="1" Grid.Column="1"  Name="ChangeWorksDaysIn2Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="2" Grid.Column="1"  Name="ChangeWorksDaysIn3Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="3" Grid.Column="1"  Name="ChangeWorksDaysIn4Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="4" Grid.Column="1"  Name="ChangeWorksDaysIn5Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="5" Grid.Column="1"  Name="ChangeWorksDaysIn6Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="6" Grid.Column="1"  Name="ChangeWorksDaysIn7Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="7" Grid.Column="1"  Name="ChangeWorksDaysIn8Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="8" Grid.Column="1"  Name="ChangeWorksDaysIn9Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="9" Grid.Column="1"  Name="ChangeWorksDaysIn10Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="10" Grid.Column="1"  Name="ChangeWorksDaysIn11Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="11" Grid.Column="1"  Name="ChangeWorksDaysIn12Month" PreviewTextInput="Digit_PreviewTextInput"/>
                </Grid>
            </ScrollViewer>
            <TextBox Grid.Row="4" Grid.Column="1" Name="PositionChangeSalary" PreviewTextInput="DigitWithDot_PreviewTextInput" />
            <TextBox Grid.Row="5" Grid.Column="1"  Name="PositionChangeComment"/>

            <Button Name="ChangePosition" FontSize="16" Content="Изменить" ToolTip="Нажмите для изменения должности" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="7" Click="Button_Click"/>

        </Grid>

        <!--грид добавления должностей+ -->
        <Grid Name="PositionAddGrid" Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition  Height="30pt"/>
                <RowDefinition  Height="30pt"/>
                <RowDefinition  Height="30pt"/>
                <RowDefinition/>
                <RowDefinition  Height="30pt"/>
                <RowDefinition  Height="30pt"/>
                <RowDefinition/>
                <RowDefinition  Height="30pt"/>
             </Grid.RowDefinitions>
            <Label Content="Добавление должности" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" FontSize="20"  />

            <Label Content="Название" Grid.Row="1" Grid.Column="0" VerticalContentAlignment="Top" HorizontalContentAlignment="Right" FontSize="16" />
            <Label Content="Рабочие дни по месяцам" Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" VerticalContentAlignment="Top" HorizontalContentAlignment="Right" FontSize="16" />
            <Label Content="Оплата" Grid.Row="4" Grid.Column="0"  VerticalContentAlignment="Top" HorizontalContentAlignment="Right" FontSize="16"/>
            <Label Content="Комментарий" Grid.Row="5" Grid.Column="0" VerticalContentAlignment="Top" HorizontalContentAlignment="Right" FontSize="16"/>

            <TextBox Grid.Row="1" Grid.Column="1" Name="PositionAddTitle"/>
            <ScrollViewer Grid.Row="2" Grid.RowSpan="2" Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Content="Январь" Grid.Row="0" Grid.Column="0" />
                    <Label Content="Февраль" Grid.Row="1" Grid.Column="0"/>
                    <Label Content="Март" Grid.Row="2" Grid.Column="0"/>
                    <Label Content="Апрель" Grid.Row="3" Grid.Column="0"/>
                    <Label Content="Май" Grid.Row="4" Grid.Column="0"/>
                    <Label Content="Июнь" Grid.Row="5" Grid.Column="0"/>
                    <Label Content="Июль" Grid.Row="6" Grid.Column="0"/>
                    <Label Content="Август" Grid.Row="7" Grid.Column="0"/>
                    <Label Content="Сентябрь" Grid.Row="8" Grid.Column="0"/>
                    <Label Content="Октябрь" Grid.Row="9" Grid.Column="0"/>
                    <Label Content="Ноябрь" Grid.Row="10" Grid.Column="0"/>
                    <Label Content="Декабрь" Grid.Row="11" Grid.Column="0"/>

                    <TextBox Grid.Row="0" Grid.Column="1" Name="AddWorksDay1Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="1" Grid.Column="1"  Name="AddWorksDay2Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="2" Grid.Column="1"  Name="AddWorksDay3Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="3" Grid.Column="1"  Name="AddWorksDay4Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="4" Grid.Column="1"  Name="AddWorksDay5Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="5" Grid.Column="1"  Name="AddWorksDay6Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="6" Grid.Column="1"  Name="AddWorksDay7Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="7" Grid.Column="1"  Name="AddWorksDay8Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="8" Grid.Column="1"  Name="AddWorksDay9Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="9" Grid.Column="1"  Name="AddWorksDay10Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="10" Grid.Column="1"  Name="AddWorksDay11Month" PreviewTextInput="Digit_PreviewTextInput"/>
                    <TextBox Grid.Row="11" Grid.Column="1"  Name="AddWorksDay12Month" PreviewTextInput="Digit_PreviewTextInput"/>
                </Grid>
            </ScrollViewer>
            <TextBox Grid.Row="4" Grid.Column="1" Name="PositionAddSalary" PreviewTextInput="DigitWithDot_PreviewTextInput" />
            <TextBox Grid.Row="5" Grid.Column="1"  Name="PositionAddComment"/>

            <Button Name="AddPosition" FontSize="16" Content="Добавить" ToolTip="Нажмите для добавления новой должности" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="7" Click="Button_Click" />
            
        </Grid>


        <!--грид должностей+ -->
